<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <name>JBossOSGi Resolver</name>
  <groupId>org.jboss.osgi.resolver</groupId>
  <artifactId>jboss-osgi-resolver-parent</artifactId>
  <packaging>pom</packaging>

  <version>1.0.0-SNAPSHOT</version>
  
  <parent>
    <groupId>org.jboss.osgi</groupId>
    <artifactId>jboss-osgi-parent</artifactId>
    <version>1.0.7-SNAPSHOT</version>
  </parent>

  <!-- Properties -->
  <properties>
    <version.apache.felix.framework>3.0.1</version.apache.felix.framework>
    <version.jboss.osgi.spi>1.0.8</version.jboss.osgi.spi>
    <version.jboss.osgi.vfs>1.0.0</version.jboss.osgi.vfs>
    <version.mockito>1.8.4</version.mockito>
    <version.osgi>4.2.0</version.osgi>
  </properties>
  
  <!-- Dependency Management -->
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.jboss.osgi</groupId>
        <artifactId>jboss-osgi-spi</artifactId>
        <version>${version.jboss.osgi.spi}</version>
      </dependency>
      
      <!-- OSGi Dependencies -->
      <dependency>
        <groupId>org.osgi</groupId>
        <artifactId>org.osgi.core</artifactId>
        <version>${version.osgi}</version>
      </dependency>

      <!-- Test Dependencies -->
      <dependency>
        <groupId>org.jboss.osgi.vfs</groupId>
        <artifactId>jboss-osgi-vfs30</artifactId>
        <version>${version.jboss.osgi.vfs}</version>
      </dependency>
      <dependency>
        <groupId>org.mockito</groupId>
        <artifactId>mockito-all</artifactId>
        <version>${version.mockito}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  
  <!-- Modules -->
  <modules>
    <module>api</module>
    <module>spi</module>
    <module>felix</module>
  </modules>

</project>
