<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">

  <id>felix-sources</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <!-- Dependency Sets -->
  <dependencySets>

    <!-- bundles -->
    <dependencySet>
      <includes>
        <include>*:org.apache.felix.framework:jar:sources</include>
      </includes>
      <useStrictFiltering>true</useStrictFiltering>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>org/apache/felix/framework/capabilityset/Attribute.java</include>
          <include>org/apache/felix/framework/capabilityset/Capability.java</include>
          <include>org/apache/felix/framework/capabilityset/CapabilitySet.java</include>
          <include>org/apache/felix/framework/capabilityset/Directive.java</include>
          <include>org/apache/felix/framework/capabilityset/Requirement.java</include>
          <include>org/apache/felix/framework/capabilityset/SimpleFilter.java</include>
          <include>org/apache/felix/framework/FelixResolverState.java</include>
          <include>org/apache/felix/framework/Logger.java</include>
          <include>org/apache/felix/framework/resolver/CandidateComparator.java</include>
          <include>org/apache/felix/framework/resolver/Content.java</include>
          <include>org/apache/felix/framework/resolver/FragmentRequirement.java</include>
          <include>org/apache/felix/framework/resolver/Module.java</include>
          <include>org/apache/felix/framework/resolver/ResolveException.java</include>
          <include>org/apache/felix/framework/resolver/ResolverImpl.java</include>
          <include>org/apache/felix/framework/resolver/Resolver.java</include>
          <include>org/apache/felix/framework/resolver/ResourceNotFoundException.java</include>
          <include>org/apache/felix/framework/resolver/WireImpl.java</include>
          <include>org/apache/felix/framework/resolver/Wire.java</include>
          <include>org/apache/felix/framework/resolver/WireModuleImpl.java</include>
          <include>org/apache/felix/framework/util/FelixConstants.java</include>
          <include>org/apache/felix/framework/util/JarFileX.java</include>
          <include>org/apache/felix/framework/util/manifestparser/CapabilityImpl.java</include>
          <include>org/apache/felix/framework/util/manifestparser/ManifestParser.java</include>
          <include>org/apache/felix/framework/util/manifestparser/ParsedHeaderClause.java</include>
          <include>org/apache/felix/framework/util/manifestparser/R4LibraryClause.java</include>
          <include>org/apache/felix/framework/util/manifestparser/R4Library.java</include>
          <include>org/apache/felix/framework/util/manifestparser/RequirementImpl.java</include>
          <include>org/apache/felix/framework/util/SecureAction.java</include>
          <include>org/apache/felix/framework/util/StringComparator.java</include>
          <include>org/apache/felix/framework/util/Util.java</include>
          <include>org/apache/felix/framework/util/VersionRange.java</include>
        </includes>
      </unpackOptions>
    </dependencySet>

  </dependencySets>
</assembly>
